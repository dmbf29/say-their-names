<section class="intro">
  <div class="container d-flex align-items-center justify-content-center">
    <%= image_tag "blm_fist.png", alt: "black lives matter fist", width: '100px' %>
    <h1>#SayTheirNames</h1>
  </div>
</section>
<section class="timeline">
  <ul>
    <% data.names.sort_by(&:year).reverse.each do |person| %>
      <li>
        <div class="name-box">
          <div class="name-box-header">
            <h5>#<%= person.name %></h5>
            <time><%= person.location %> - <%= person.year %></time>
          </div>
          <p><span class="font-bolder">What they were doing: </span><%= person.doing %>
          </p>
          <p><span class="font-bolder">How they were killed: </span><%= person.killing %>
          </p>
          <p><span class="font-bolder">Action taken:</span> <%= person.action %>
          </p>
          <% link_to person.link, class: 'external-link' do %>
            <i class="fas fa-external-link-alt"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</section>
<div class="d-flex justify-content-center" style="margin-top: 64px;">
  <button type="button" class="btn btn-suggest" data-toggle="modal" data-target="#formModal">Suggest a Name</button>
</div>
<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body" style="background-color: #292929;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true" style="color: white">&times;</span>
        </button>
        <div class="powr-form-builder" id="a306888d_1595644974"></div>
        <script src="https://www.powr.io/powr.js?platform=embed"></script>
      </div>
    </div>
  </div>
</div>